{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_content %}
    <div class="container">
        <h1>Abonnement Details</h1>

        <form action="{{ path('update_abonnement', {'id': id}) }}" method="POST">
            {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.tarif) }}
            <button type="submit" class="btn btn-primary">{{"save"|trans}}</button>
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}