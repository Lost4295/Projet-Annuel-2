{% extends 'base.html.twig' %}

{% block title %}
	{{page_title}}
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="mb-3">
			You are logged in as
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Logout</a>
		</div>
	{% endif %}
	<h1 class="h3 mb-3 font-weight-normal">{{page_title}}</h1>
	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="card bg-info">
		<div class="card-body">
			<form action="{{ path('login') }}" method="post">
				<label for="username">{{username_label|trans([],"admin")}}</label>
				<input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">
				<label for="password">{{password_label|trans([], "admin")}}</label>
				<input type="password" id="password" class="form-control" name="_password">
				<a href="{{path("app_forgot_password_request") }}">{{forgot_password_label|trans([], "admin")}}</a>
				<div class="">
					<input type="checkbox" id="remember_me" class="form-checkbox" name="_remember_me" checked>
					<label for="remember_me">{{remember_me_label|trans([], "admin")}}</label>
				</div>
				{# If you want to control the URL the user is redirected to on success
<input type="hidden" name="_target_path" value="/account"> #}
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<button type="submit">{{sign_in_label|trans([], "admin")}}</button>
			</form>
		</div>
	</div>
{% endblock %}
