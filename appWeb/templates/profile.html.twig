					{{ form_start(user) }}
					<div class="d-flex justify-content-around">
						<div class="col-5">
							{{ form_row(user.nom) }}
						</div>
						<div class="col-5">
							{{ form_row(user.prenom) }}
						</div>
					</div>
					<div class="d-flex justify-content-around">
