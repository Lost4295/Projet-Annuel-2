						</div>
					</div>
					<div class="d-flex justify-content-around">
						<div class="col-5">
							<input type="submit" id="submit" class="btn btn-primary d-none" value="{{'submit'|trans }}">
						</div>
					</div>
					{{ form_end(user) }}
				</div>
				<div class="tab-pane fade" id="v-pills-docs" role="tabpanel" aria-labelledby="v-pills-docs-tab" tabindex="0">
					<h2>{{'docs'|trans }}</h2>
					<div class="d-flex justify-content-around">
						<table class="table table-bordered">
							<tr>
								<th>{{'nom'|trans }}</th>
								<th>{{'date'|trans }}</th>
								<th>{{'size'|trans }}</th>
								<th>{{'type'|trans }}</th>
								<th>{{'action'|trans }}</th>
							</tr>
							{% if docs is defined %}
								{% for doc in docs %}
									<tr>
										<td>{{ doc.name }}</td>
										<td>{{ doc.date|date('d/m/Y') }}</td>
										<td>{{ doc.size }}</td>
										<td>{{ doc.type }}</td>
										<td>
											<a href="{{ path('download', {'id': doc.id}) }}">{{'download'|trans }}</a>
											<a href="{{ path('delete', {'id': doc.id}) }}">{{'delete'|trans }}</a>
										</td>
									</tr>
								{% endfor %}
							{% else %}
								<tr>
									<td colspan="5">{{'no_docs'|trans }}</td>
								</tr>
							{% endif %}
						</table>
					</div>
				</div>
