{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block title %}
    {{ 'Demande de devis'|trans }}
{% endblock %}
{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-orange py-2 rounded text-center mb-4">
                <h4 class="my-2">{{ 'Bienvenue sur la page de demande de Devis'|trans }}</h4>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8 ">
            <div class="card shadow-sm">
                <div class="card-body rounded bg-info">
                    <h5 class="card-title text-center">{{ 'Demande de devis'|trans }}</h5>
                    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.prenom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.numero) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.prestation) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.contact) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">{{ 'Envoyer votre demande de devis'|trans }}</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
