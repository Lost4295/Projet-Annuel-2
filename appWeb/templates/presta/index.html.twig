{% extends 'base.html.twig' %}
{% block body %}


	<div class="row py-2 d-flex bg-orange">
		<div class="fs-1 text-center ">
			<h4>{{"Vous pouvez faire votre demande de devis"|trans}}
				<a href="{{path("create_devis")}}">{{"ici"|trans}}</a>
			</h4>
		</div>
	</div>

	<div class="row mt-5">
		{% for presta in prestas %}
			{% if  presta.image == null %}
				{% set link = "menage.jpg" %}
			{% else %}
				{% set link = presta.image %}
			{% endif %}
			<a href="{{ path('detail_presta', {'id': presta.id}) }}" class="col-md-4 py-1 text-decoration-none">
				<div class="card">
					<div class="card-body">
						<img src={{asset("images/presta/"~ link)}} class="card-img-top" alt="..." height="300">
						<h5 class="text-center">{{presta.societyName|slice(0,30)}}
						</h5>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
{% endblock %}
